<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tumblr_logo_dark"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="15dp"
            android:paddingEnd="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/UserDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_from_top"
                android:text="Desk User Details ⁕"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/side_profile_icon"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/WorkerName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:hint="Full Name ⁕"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_mobile"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.santalu.maskedittext.MaskEditText
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:hint="Phone number ⁕"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="12"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size"
                    app:met_mask="##-##########" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_email"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:hint="Email ⁕"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/calender_vector"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:focusable="false"
                    android:hint="Date of Bith ⁕"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionNext"
                    android:inputType="date"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_gender"
                        app:tint="@color/white" />
                </LinearLayout>


                <Spinner
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_top_bottom_right_radius_spinner"
                    android:dropDownWidth="match_parent"
                    android:elevation="2dp"
                    android:popupBackground="@drawable/shape_colored_box"
                    android:popupElevation="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/genderError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Gender not Selected *"
                android:textColor="@color/error_red"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_location_vector"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/AddressLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:hint="Address ⁕"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_password"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:hint="Password"
                    android:imeActionLabel="Next"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/gap_from_top">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_top_bottom_left_radius"
                    android:backgroundTint="@color/SmartDesk_Blue"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_password"
                        app:tint="@color/white" />
                </LinearLayout>

                <com.smartdesk.utility.library.CustomEditext
                    android:id="@+id/confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_editext"
                    android:drawablePadding="@dimen/drawable_padding"
                    android:hint="Confirm Password"
                    android:imeActionLabel="Done"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/textColor"
                    android:textColorHint="@color/black_overlay"
                    android:textSize="@dimen/edit_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/checkboxLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/gap_from_top"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/termscheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/attr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you Agree with our Terms &amp; Condtion"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>